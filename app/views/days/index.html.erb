<h1>Cycle <%= @cycle.start_date %></h1>

<div class="graphs">
<%= temperatures_by_day %>
<%= weight_by_day %>
<%= other_chars_by_day %>
</div>

<div class="data">
  <h3>Peak day:<%= @cycle.peak_day %></h3>
  <h3>LTL:<%= @cycle.ltl %>, HTL:<%= @cycle.htl %></h3>
  <h3>Last day of pre 6: <%= @cycle.last_day_of_pre_shift_6 %> </h3>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cycle day</th>
      <th>Bleeding</th>
      <th>Sensation</th>
      <th>Characteristics</th>
      <th>Cervix</th>
      <th>Temp</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @days.each do |day| %>
      <tr class="<%= day.phase %>">
        <td><%= day.date %></td>
        <td><%= day.number %></td>
        <td><%= day.bleeding %></td>
        <td><%= day.sensation %></td>
        <td><%= day.characteristics %></td>
        <td><%= day.cervix %></td>
        <td><%= day.temp %></td>
        <td><%= link_to 'Show', cycle_day_path(@cycle, day) %></td>
        <td><%= link_to 'Edit', edit_cycle_day_path(@cycle, day) %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>
</div>
